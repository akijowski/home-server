   root /etc/coredns/zones
   file ./db.home.kijowski.io home.kijowski.io
   file ./db.192.168.50 50.168.192.in-addr.arpa

   # Quad9
   # https://coredns.io/plugins/forward/
   forward . tls://9.9.9.11 {
      tls_servername dns11.quad9.net
      health_check 5s
   }
   cache 30
   log home.kijowski.io 50.168.192.in-addr.arpa
   errors
   health
   whoami
}
