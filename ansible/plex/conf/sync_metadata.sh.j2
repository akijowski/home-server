#!/bin/bash

{{ ansible_managed | comment }}

set -eou pipefail

function main() {
    # use rsync to copy from local ssd to nfs-backed storage
    rm -f /var/log/rsync_plex_metadata.log
    rsync --archive --stats --log-file=/var/log/rsync_plex_metadata.log /mnt/ssd/plexmediaserver/ {{ plex_metadata_nfs_root_dir }}/
}

main "$@"
