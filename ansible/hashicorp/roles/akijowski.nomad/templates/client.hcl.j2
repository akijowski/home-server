#jinja2:lstrip_blocks: True
{# helps with nested blocks #}
{# can also set this as a field in the template module #}
{# https://stackoverflow.com/questions/42914324/extra-spaces-appearing-in-ansible-templates #}
{# https://jinja.palletsprojects.com/en/stable/templates/#whitespace-control #}
{{ ansible_managed | comment }}

client {
  enabled = true
  servers = [{{ nomad_server_ips }}]

  reserved = {
    cpu = 250 # 250 MHz
  }

  options = {
    "user.checked_drivers" = "exec,raw_exec,qemu,java"
    "user.denylist" = "root,ubuntu"
    "driver.denylist" = "docker"
  }

  meta = {
    "hostname" = "{{ inventory_hostname_short }}"
  }

  {% for h in nomad_client_host_volumes | default([]) %}
  host_volume "{{ h.name }}" {
    path = "{{ h.path }}"
    read_only = {{ h.read_only | default('false') }}
  }

  {% endfor %}

  {% for n in nomad_client_host_networks | default([]) %}
  {# https://support.hashicorp.com/hc/en-us/articles/22202167019411-Nomad-Setting-Up-Multiple-Network-Interfaces #}
  {# https://developer.hashicorp.com/nomad/docs/configuration/client#host_network-block #}
  host_network "{{ n.name }}" {
    cidr = "{{ n.cidr }}"
  }

  {% endfor %}
  {% if nomad_client_host_networks | default([]) | length > 0 %}
  # specify a primary network interface for the client as there are multiple networks on the host
  # exclude private addresses that have been added by the nomad_client_host_networks variable
  # network_interface = {% raw %}"{{ GetPrivateInterfaces | exclude \"network\" \"{% endraw %}{{ nomad_client_host_networks | map(attribute='cidr') | join('|') }}{% raw %}\" }}"{% endraw %}

  network_interface = "eth0"
  {% endif %}

  # Either leave_on_interrupt or leave_on_terminate must be set
  # for this to take effect.
  drain_on_shutdown = {
    deadline = "10m"
  }

}

# enable the podman plugin
plugin "nomad-driver-podman" {}

leave_on_terminate = true

{% if nomad_usb_plugin_enabled | default(False) %}
# https://gitlab.com/CarbonCollins/nomad-usb-device-plugin#configuration
plugin "{{ usb_plugin_name }}" {
  config {
    enabled = true
    mount_dev_nodes = true

    included_vendor_ids = [{{ nomad_usb_vendor_id_allowlist | join(', ') }}]
    excluded_vendor_ids = []

    included_product_ids = []
    excluded_product_ids = []

    fingerprint_period = "1m"
  }
}
{% endif %}

{% if nomad_vault_integration | default(False) %}
# https://developer.hashicorp.com/nomad/docs/configuration/vault#nomad-client
vault {
  enabled = true
  address = "{{ nomad_vault_address }}"
  jwt_auth_backend_path = "{{ nomad_vault_jwt_mount_path }}"
}
{% endif %}
