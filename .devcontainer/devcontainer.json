// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu
{
	"name": "Ansible",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
	"build": {
		"dockerfile": "ansible.Dockerfile"
	},
	"runArgs": ["--name", "ansible_devcontainer", "--env-file", "container.env"],
	"postStartCommand": "task install",
	"mounts": [
		"type=bind,src=${localEnv:HOME}/.ssh/github_akijowski_mbp14,dst=${containerWorkspaceFolderBasename}/.ssh/github_akijowski_mbp14,readonly"
	],
	"containerEnv": {
		"ANSIBLE_ROLES_PATH": "/root/.ansible/roles:/usr/share/ansible/roles:/etc/ansible/roles:${containerWorkspaceFolder}/ansible/roles",
		"ANSIBLE_VAULT_PASSWORD_FILE": "${containerWorkspaceFolder}/ansible/.secrets/.vault_pass.txt",
		"ANSIBLE_BECOME_PASSWORD_FILE": "${containerWorkspaceFolder}/ansible/.secrets/.become_pass.txt"
	},
	"shutdownAction": "stopContainer"

